<?xml version="1.0" encoding="UTF-8"?>
<testcase>
	<brief>Verify noise floor info</brief>
	<priority>High</priority>
	<automated>yes</automated>
	<description>
		Pre-Condition:

		Ssid xxx bind to wifi1 interface
		CLI: ssid xxx
		Interface wifi1 ssid xxx
		Open debug : _debug dcd cpm

		Test Procedure:

		1: client connect to xxx successfully
		2: show interface wifi0
	</description>
	<numofap>1</numofap>
	<numofsta>1</numofsta>
	<tbtype>winlin</tbtype>

	<stage>
		<if>"${ap1.wifi1.existed}" =="true"</if>

		<step no="1">
			<desc>
				Ssid xxx bind to wifi1 interface
				CLI: ssid xxx
				Interface wifi1 ssid xxx
			</desc>
			<telnet target="ap1">
				-v "ssid ${ssid.name}"
				-v "interface wifi1 ssid ${ssid.name}"
				-v "interface wifi1 radio channel 36"
			</telnet>
		</step>

		<include prefix="sta.conn.ap" file="subs/sta_wifi_connect_${tb.os}.xml" obj-args="conn1, sta1, ap1" />

		<step no="open.debug">
			<desc>
				Open debug : _debug dcd cpm
			</desc>
			<telnet target="ap1">
				-v "clear log all"
				-v "_debug dcd cpm"
				-v " exec _client ${sta1.tif.mac}"
			</telnet>
		</step>

		<step no="2">
			<desc>
				1: show interface wifi1
			</desc>
			<log-file>step2_show_int_wifi1.log</log-file>
			<telnet target="ap1">
				-v "show interface wifi1"
			</telnet>
		</step>

		<step no="get.Noise">
			<desc>get Noise floor</desc>
			<setvar name="Noise">
				${bin.dir}/getbyrexp.py -p "Noise floor=-(\d+)dBm" -f ${log.dir}/step2_show_int_wifi1.log -g 0
			</setvar>
		</step>

		<step no="2.1">
			<desc>show logging buffer to check debug</desc>
			<log-file>step2_show_log_buffered.log</log-file>
			<telnet target="ap1" timeout="300">
				-v "show logging buffered"
				-v "clear log all"
			</telnet>
			<log-match>-c -i "noise_floor(-${Noise})" -i "${sta1.tif.mac}"</log-match>
			<no-error-check />
		</step>
	</stage>
	
	<stage>
        <step no="po_1">
			<desc>
				shutdown wlan interface on sta
			</desc>
			<log-file>po_1.log</log-file>
			<ssh target="sta1" prompt=".*#">
            -v "ifconfig ${sta1.tif.name} down"
			</ssh>
		</step>
	</stage>
</testcase>