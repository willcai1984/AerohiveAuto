<?xml version="1.0" encoding="UTF-8"?>
<testcase>
	<brief>Bootloader password test (default password become adminadmin in 3.5r3)</brief>
	<priority>High</priority>
	<automated>yes</automated>
	<description>
		"set_hw_md"" to check if AP manufacture date can be changed
	</description>
	<numofap>1</numofap>
	<numofsta>0</numofsta>
	<tbtype>linux</tbtype>

	<property name="def_bootload_passwd" value="administrator" />
	<property name="md" value="30130501" />
	<stage>
		<step no="pre_test">
			<desc>unset boot password</desc>
			<console target="ap1">
				-v "no boot-param boot-password"
			</console>
		</step>

		<step no="1">
			<desc>get bootloader prompt and go into bootloader with default password</desc>
			<console target="ap1" prompt="[=0-9A-Za-z]+>|AH-[0-9A-Za-z]*#">
       -bp ${def_bootload_passwd}
       -v "reboot"
       -v "version"
      </console>
			<no-error-check />
		</step>

		<step no="2">
	        <desc>Excuse some CLI in bootloader set-bootparam</desc>
	        <console target="ap1" prompt="[=0-9A-Za-z]+>|AH-[0-9A-Za-z]*#">
	          -v "set_hw_md ${md}"
	        </console>
			<no-error-check />
	    </step>
		<step no="3">
			<desc>go out of bootloader</desc>
			<console target="ap1" prompt="[=0-9A-Za-z]+>|AH-[0-9A-Za-z]*#">
            -v "reset"
            </console>
			<no-error-check />
		</step>
		<step no="4">
              <desc>show hw_info</desc>
		      <log-file>hw_info.log</log-file>
		      <console target="ap1" prompt="AH-[0-9A-Za-z]*#"> 
		       -v "show hw-info"
		      </console>
		      <log-match>-i "Manufacturing date" -i "${md}"</log-match>
			<no-error-check />
		</step>
	</stage>
	
	<failed-process>
	<stage>
		<step no="post_1">
			<desc>go out of bootloader</desc>
			<console target="ap1" prompt="[=0-9A-Za-z]+>|AH-[0-9A-Za-z]*#">
			-v "ctrl-c"
			-v "ctrl-c"
			-v "reset"
			</console>
			<no-error-check />
		</step>
	</stage>
	</failed-process>
</testcase>