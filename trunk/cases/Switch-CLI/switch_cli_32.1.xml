<?xml version="1.0" encoding="UTF-8"?>
<testcase>
	<brief> Bean CLI check </brief>
	<priority>High</priority>
	<automated>yes</automated>
	<numofsw>1</numofsw>
	<tbtype>winlin</tbtype>

	<description>
    CLI: show system fans and system fans underspeed-threshold [numbers]
	</description>
	<comment>
	</comment>
	<property name="sw1.user" value="admin" />
	<property name="sw1.passwd" value="aerohive" />
	<property name="fans_num" value="3000" />
	
	<stage>    	
		<step no="1.0">
			<desc>
			Check system processes	
			</desc>
			<log-file>system_fans.log</log-file>
			<console target="sw1" prompt="[=0-9A-Za-z]+>+|AH-[0-9A-Za-z]*#">
				-v "system fans underspeed-threshold ${fans_num}"
				-v "show system fan"
			</console>
			<log-match>-i "FAN1" -i "${fans_num}"</log-match>
			<log-match>-i "FAN2" -i "${fans_num}"</log-match>
			<log-match>-i "FAN3" -i "${fans_num}"</log-match>
			<log-match>-i "FAN1" -i "${fans_num}"</log-match>
		</step>
	</stage>
	<failed-process>
		<stage>
		    <step no="2.0">
                 <desc>
                 recovery env
                 </desc>
			     <log-file>reboot.log</log-file>
                 <console target="sw1" slow="1">
                -v "reboot"
                </console>
                <no-error-check />
		    </step>
		</stage>
	</failed-process>
</testcase>