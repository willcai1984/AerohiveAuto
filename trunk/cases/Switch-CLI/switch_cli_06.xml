<?xml version="1.0" encoding="UTF-8"?>
<testcase>
	<brief> Bean CLI check </brief>
	<priority>High</priority>
	<automated>yes</automated>
	<numofsw>1</numofsw>
	<tbtype>winlin</tbtype>

	<description>
    CLI: Perform a ping
	</description>
	<comment>
	</comment>
	<property name="sw1.user" value="admin" />
	<property name="sw1.passwd" value="aerohive" />
	<property name="target_ip" value="10.155.3.243" />
	
	<stage>    	
		<step no="1.0">
			<desc>
			Perform a ping	
			</desc>
			<log-file>ping.log</log-file>
			<console target="sw1" prompt="[=0-9A-Za-z]+>+|AH-[0-9A-Za-z]*#">
				-v "ping ${mpc.tif.ip}"
			</console>
			<log-match>-i "5 packets transmitted" -i "5 received" -i "0% packet loss"</log-match>
		</step>
	</stage>
	<failed-process>
		<stage>
		    <step no="2.0">
                 <desc>
                 recovery env
                 </desc>
			     <log-file>reboot.log</log-file>
                 <console target="sw1" slow="1">
                -v "reboot"
                </console>
                <no-error-check />
		    </step>
		</stage>
	</failed-process>
</testcase>