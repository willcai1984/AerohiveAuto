<?xml version="1.0" encoding="UTF-8"?>
<testcase>
	<brief>Failure scenario for time-zone inputting</brief>
	<priority>Middle</priority>
	<automated>yes</automated>
	<description></description>
	<numofbr>1</numofbr>
	<numofsta>0</numofsta>
	<tbtype>linux</tbtype>

	<stage>
		<step no="0.1">
			<desc>
				disable ntp
			</desc>
			<console target="br1.br">
				-v "no ntp enable"
			</console>
		</step>
		
		<step no="0.2">
			<desc>
				disable ntp
			</desc>
			<log-file>step0.2.log</log-file>
			<console target="br1.br">
				-v "sh ru | i ntp"
			</console>
			<log-match>-c -i "no ntp enable"</log-match>
		</step>

		<step no="1">
			<desc>
				cli help
			</desc>
			<log-file>step1.log</log-file>
			<console target="br1.br">
				-v "clo time-zone ?"
			</console>
			<log-match>-c -i "Default: 0"</log-match>
			<log-match>-c -i "Range: *from -12 to 12"</log-match>
			<no-error-check />
		</step>
		
		<step no="2.1">
			<desc>
				set invalid time-zone
			</desc>
			<log-file>step2.1.log</log-file>
			<console target="br1.br">
				-v "clo time-zone 13"
			</console>
			<log-match>-c -i "unknown keyword or invalid input"</log-match>
			<no-error-check />
		</step>
		
		<step no="2.2">
			<desc>
				set invalid time-zone
			</desc>
			<log-file>step2.2.log</log-file>
			<console target="br1.br">
				-v "clo time-zone -13"
			</console>
			<log-match>-c -i "unknown keyword or invalid input"</log-match>
			<no-error-check />
		</step>
		
	</stage>
</testcase>