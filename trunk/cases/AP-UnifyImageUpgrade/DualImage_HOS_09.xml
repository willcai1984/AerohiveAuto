<?xml version="1.0" encoding="UTF-8"?>
<testcase>
	<brief>force upgrade to different image with current/ backup image</brief>
	<priority>Accept</priority>
	<automated>yes</automated>
	<description></description>
	<numofap>1</numofap>
	<numofsta>0</numofsta>
	<tbtype>linux</tbtype>

	<stage>
		<step no="0.1">
			<desc>echo image in test</desc>
			<log-file>step_0.1.log</log-file>
			<script>
				echo "image.a= ${image.a}"
				echo "image.b= ${image.b}"
				echo "image.c= ${image.c}"
				echo ""
			</script>
			<no-error-check />
		</step>
		
		<step no="1.1">
			<if>"${image.a}" != ""</if>
			<desc>load image to mpc</desc>
			<log-file>step_1.1.log</log-file>
			<script>
				${case.dir}/bin/download_image.pl ${image.a}
			</script>
			<no-error-check />
		</step>
		
		<step no="1.2">
			<if>"${image.b}" != ""</if>
			<desc>load image to mpc</desc>
			<log-file>step_1.2.log</log-file>
			<script>
				${case.dir}/bin/download_image.pl ${image.b}
			</script>
			<no-error-check />
		</step>
		
		<step no="1.3">
			<if>"${image.c}" != ""</if>
			<desc>load image to mpc</desc>
			<log-file>step_1.3.log</log-file>
			<script>
				${case.dir}/bin/download_image.pl ${image.c}
			</script>
			<no-error-check />
		</step>
		
		<step no="2.1">
			<desc>remove rsapublickey.pem</desc>
			<log-file>step_2.1.log</log-file>
			<console target="ap1" slow="true" prompt="AH.*#|$">
				<!---v 'show system command "rm -f /etc/rsapublickey.pem"'-->
				-b -sp "${ap1.shellpwd}"
				-v "_shell"
				-v ""
				-v "cd /opt/ah/etc/"
				-v ""
				-v "./ah_delete_sigfile"
				-v ""
				-v "exit"
			</console>
			<no-error-check />
		</step>
	</stage>	
	
	<stage>
		<step no="3.1">
			<desc>upgrade current image to image.a</desc>
			<log-file>step_3.1.log</log-file>
			<console target="ap1" timeout="300">
				-v "save image tftp://${mpc.tif.ip}:${image.a} force"
			</console>
			<log-match>-n -c -e "fail"</log-match>
			<no-error-check />
		</step>
		
		<step no="3.2">
			<desc>reboot ap</desc>
			<console target="ap1">
				-v "reboot"
			</console>
			<no-error-check />
		</step>
		
		<step no="3.3">
			<desc>upgrade backup image to image.a</desc>
			<log-file>step_3.3.log</log-file>
			<console target="ap1" timeout="300">
				-v "save image tftp://${mpc.tif.ip}:${image.a} force"
			</console>
			<log-match>-n -c -e "fail"</log-match>
			<no-error-check />
		</step>
		
		<step no="3.4">
			<desc>reboot ap</desc>
			<console target="ap1">
				-v "reboot"
			</console>
			<no-error-check />
		</step>
		
		<step no="3.5">
			<desc>show version detail</desc>
			<log-file>step_3.5.log</log-file>
			<console target="ap1">
				-v "show version detail"
			</console>
		</step>

		<step no="3.6">
			<desc>get current image</desc>
			<setvar name="image.current.0">
				${bin.dir}/getbyrexp.py -p "(?i)build\s+time:\s+([\s\w\s:]+)" \
				-t str -g 0 -s none \
				-f ${log.dir}/step_3.5.log
			</setvar>
		</step>

		<step no="3.7">
			<desc>get backup image</desc>
			<setvar name="image.backup.0">
				${bin.dir}/getbyrexp.py -p "(?i)build\s+time:\s+([\s\w\s:]+)" \
				-t str -g 1 -s none \
				-f ${log.dir}/step_3.5.log
			</setvar>
		</step>

		<step no="3.8">
			<desc>check current image and backup image</desc>
			<script>
				if [ "${image.current.0}" == "${image.backup.0}" ];
				then
					exit 0
				else
					exit 1
				fi
			</script>
		</step>				
	</stage>
	
	<stage>
		<step no="4.1">
			<desc>check current image</desc>
			<log-file>step_4.1.log</log-file>
			<console target="ap1">
				-v "sh ver de"
			</console>
		</step>
		
		<step no="4.2">
			<desc>get build time of current image</desc>
			<setvar name="image.current.1">
				${bin.dir}/getbyrexp.py -p "(?i)build\s+time:\s+([\s\w\s:]+)" \
				-t str -g 0 -s none \
				-f ${log.dir}/step_4.1.log
			</setvar>
		</step>
		
		<step no="5.1">
			<desc>upgrade image to image.b</desc>
			<log-file>step_5.1.log</log-file>
			<console target="ap1" timeout="300">
				-v "save image tftp://${mpc.tif.ip}:${image.b} force"
			</console>
			<log-match>-c -e "Program application finished"</log-match>
			<log-match>-n -c -e "fail"</log-match>
			<no-error-check/>
		</step>
		
		<step no="5.2">
			<desc>reboot ap</desc>
			<console target="ap1">
				-v "reboot"
			</console>
			<no-error-check />
		</step>		
		
		<step no="6.1">
			<desc>check current image</desc>
			<log-file>step_6.1.log</log-file>
			<console target="ap1">
				-v "sh ver de"
			</console>
		</step>
		
		<step no="6.2">
			<desc>get build time of current image</desc>
			<setvar name="image.current.2">
				${bin.dir}/getbyrexp.py -p "(?i)build\s+time:\s+([\s\w\s:]+)" \
				-t str -g 0 -s none \
				-f ${log.dir}/step_6.1.log
			</setvar>
		</step>
		
		<step no="6.3">
			<desc>get build time of backup image</desc>
			<setvar name="image.backup.2">
				${bin.dir}/getbyrexp.py -p "(?i)build\s+time:\s+([\s\w\s:]+)" \
				-t str -g 1 -s none \
				-f ${log.dir}/step_6.1.log
			</setvar>
		</step>
				
		<step no="7">
			<desc>check current image</desc>
			<script>
				if [ "${image.current.1}" != "${image.current.2}" ] \
				&amp;&amp; [ "${image.current.1}" == "${image.backup.2}" ];
				then
					exit 0
				else
					exit 1
				fi
			</script>
		</step>		
	</stage>
	
</testcase>