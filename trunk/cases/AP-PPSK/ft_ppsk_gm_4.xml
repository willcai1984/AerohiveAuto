<?xml version="1.0" encoding="UTF-8"?>
<testcase>
    <brief>Verify allowed usage time on the GM.</brief>
    <priority>High</priority>
    <automated>no</automated>
    <description>
        
		Pre-Condition:

			

		Test Procedure:

			1.	Create an PPSK account on GM, set the allowed usage time as 1 hour.
			2.	Connect to the SSID using the PPSK, for half an hour.
			3.	Wait for an hour then connect to the SSID again. [result 1]
			4.	Check the connection of the client after 0.5 hour. [result 2]
    </description>
    <numofap>1</numofap>
    <numofsta>1</numofsta>
    <tbtype>winlin</tbtype>
    <property name="" value=""/>
    <stage>
                <step no="1">
            <desc>
            1.	Create an PPSK account on GM, set the allowed usage time as 1 hour.
            </desc>
            <log-file></log-file>
            <telnet target="ap1"></telnet>
            <ssh target="sta1"></ssh>
            <setvar name=""></setvar>
            <script></script>
            <log-match></log-match>
        </step>
        <step no="2">
            <desc>
            2.	Connect to the SSID using the PPSK, for half an hour.
            </desc>
            <log-file></log-file>
            <telnet target="ap1"></telnet>
            <ssh target="sta1"></ssh>
            <setvar name=""></setvar>
            <script></script>
            <log-match></log-match>
        </step>
        <step no="3">
            <desc>
            3.	Wait for an hour then connect to the SSID again. [result 1]
            </desc>
            <log-file></log-file>
            <telnet target="ap1"></telnet>
            <ssh target="sta1"></ssh>
            <setvar name=""></setvar>
            <script></script>
            <log-match></log-match>
        </step>
        <step no="4">
            <desc>
            4.	Check the connection of the client after 0.5 hour. [result 2]
            </desc>
            <log-file></log-file>
            <telnet target="ap1"></telnet>
            <ssh target="sta1"></ssh>
            <setvar name=""></setvar>
            <script></script>
            <log-match></log-match>
        </step>

    </stage>
    <failed-process>
        <step no="1..n">
            .. process
	</step>
    </failed-process>
</testcase>
