<?xml version="1.0" encoding="UTF-8"?>
<testcase>
	<brief>usb read addr blk# cnt
           read `cnt' blocks starting at block `blk#' to memory address `addr'.
	 </brief>
	<priority>High</priority>
	<automated>yes</automated>
	<numofsw>1</numofsw>
	<tbtype>winlin</tbtype>

	<description>
		test_usb
	</description>
	<comment>
	</comment>
	<property name="sw1.user" value="admin" />
	<property name="sw1.passwd" value="aerohive" />
	<property name="bootload_passwd" value="administrator" />
	
	
	<stage>
	   
	    <step no="pre-test">
	          <desc>set the password to default</desc>
	          <console target="sw1">
	          -v "no boot-param boot-password"
	          </console>
	          <no-error-check />
	    </step>
	    
		<step no="1">
			<desc>
				enter into bootloader mode
			</desc>
			<log-file>step1.1_enter_bootloader.log</log-file>
			<console target="sw1" prompt="[=0-9A-Za-z]+>+|AH-[0-9A-Za-z]*#">
				-bp ${bootload_passwd}
				-v "reboot"
			</console>
		</step>

		<step no="2">
			<desc>
				check cli usb read
			</desc>
			<log-file>step2.1_.log</log-file>
			<console target="sw1" prompt="SR[=0-9A-Za-z]*>>">
				-v "usb read 0x02000000 0 1"
			</console>
			<log-match>-c -e "USB *read." -e "no current device selected"</log-match>
		</step>

		<step no="3">
			<desc>
				go out of bootloader
			</desc>
			<console target="sw1" prompt="SR[=0-9A-Za-z]*>>">
				-v "reset"
			</console>
		</step>
	</stage>

	<failed-process>
		<stage>
			<step no="post_1">
				<desc>go out of bootloader</desc>
				<console target="sw1" prompt="SR[=0-9A-Za-z]*>>">
					-v "reset"
				</console>
				<no-error-check />
			</step>
		</stage>
	</failed-process>
</testcase>